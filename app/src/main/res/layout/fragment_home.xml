<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />
            <LinearLayout
                android:id="@+id/scrollText"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:background="#50323232"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_home_xiaoxi" />

                <com.zejor.customview.AutoVerticalScrollTextView
                    android:id="@+id/autoScrollTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/monet_rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="192dp"
                android:paddingBottom="35dp"
                android:background="@drawable/login_btn_share1"
                >
            <RelativeLayout
                android:id="@+id/monet_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/money"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp"
                >
                <TextView
                    android:id="@+id/kejie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可借金额（元）"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#7a7a7a"
                    android:layout_marginTop="50dp"
                    />
                <TextView
                    android:id="@+id/TVLoanMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="40sp"
                    android:textColor="#fe1048"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/kejie"
                    android:layout_marginTop="20dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/monet_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_below="@+id/monet_rl"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shandian"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快速审批"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shenfen"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信用贷款"
                    android:textSize="12sp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="15dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qian"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="极速放款"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_assessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_share"
                android:gravity="center"
                android:padding="13dp"
                android:layout_below="@+id/monet_ll"
                android:text="马上申请借款"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="199dp">
            </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/MoneyProgress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/monet_rl1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/login_btn_share1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:text="借款进度"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_jiantou_right"
                    android:text="查询"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/MoneyProgress"
                android:background="@color/background"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/canBorrowMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:background="@color/white"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/test2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="借款金额"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/TVLoanMoney1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="¥10000"
                    android:textColor="@color/red"
                    android:textSize="13sp" />

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/seek_bar_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test2"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    app:bsb_track_color="@color/gray"
                    app:bsb_progress="100"
                    app:bsb_max="1000000"
                    app:bsb_second_track_color="@color/red" />


                <TextView
                    android:id="@+id/TVLoanMoneyMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seek_bar_money"
                    android:layout_marginHorizontal="10dp"
                    android:text="500"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/color136"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/TVLoanMoneyMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/seek_bar_money"
                    android:layout_marginHorizontal="10dp"
                    android:text="¥10000"
                    android:textColor="@color/color136"
                    android:textSize="11sp" />

            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/canBorrowMoney"
                android:visibility="gone"
                android:background="@color/background" />


            <RelativeLayout
                android:id="@+id/remainingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:visibility="gone"
                android:background="@color/white">

                <TextView
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="借款天数"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/TVLoanDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="14天"
                    android:textColor="@color/color_orange"
                    android:textSize="13sp" />


                <com.xw.repo.BubbleSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    app:bsb_bubble_color="@color/red"
                    app:bsb_progress="100"
                    app:bsb_track_color="@color/gray"
                    app:bsb_second_track_color="@color/color_orange"
                    app:bsb_min="0"
                    android:id="@+id/seek_bar_date"
                    />



                <TextView
                    android:id="@+id/TVLoanDayMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seek_bar_date"
                    android:layout_marginHorizontal="10dp"
                    android:text="7天"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/color136"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/TVLoanDayMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/seek_bar_date"
                    android:layout_marginHorizontal="10dp"
                    android:text="14天"
                    android:textColor="@color/color136"
                    android:textSize="11sp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/remainingDate"
                android:background="@color/background"
                android:visibility="gone"
                />

        </RelativeLayout>

    </ScrollView>




    <TextView
        android:id="@+id/tv_new_order"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_home_dingdan"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="您有新的订单状态      查看    ＞"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>

